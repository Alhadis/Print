{
	"name": "print",
	"version": "v1.2.0",
	"description": "Generate a human-readable representation of a value.",
	"author": "John Gardner <gardnerjohng@gmail.com>",
	"keywords": ["stringify", "trace", "debug", "outline", "format", "string"],
	"repository": "https://github.com/Alhadis/Print",
	"license": "ISC",
	"engines": {
		"node": ">=13.2.0",
		"deno": ">=1.0.0",
		"quickjs": ">=2020-01-19"
	},
	"main": "print.mjs",
	"type": "module",
	"files": ["print.mjs"],
	"scripts": {
		"lint": "make lint",
		"test": "make test"
	},
	"devDependencies": {
		"@alhadis/eslint-config": "^2.4.0",
		"c8": "^7.12.0",
		"eslint": "^8.22.0",
		"mocha": "^10.0.0",
		"mocha-when": "^1.0.1"
	},
	"mocha": {
		"require": ["mocha-when/register"]
	},
	"eslintConfig": {
		"extends": "@alhadis",
		"env": {
			"browser": false,
			"mocha": false,
			"node": false
		},
		"overrides": [{
			"files":   ["dump-env.mjs"],
			"globals": {"console": "readonly"},
			"rules":   {
				"capitalized-comments": ["error", "always", {"ignorePattern": "^bin/sh"}],
				"spaced-comment": 0
			}
		},{
			"files":   ["test/*.mjs"],
			"env":     {"mocha": true},
			"globals": {"when": "readonly"}
		},{
			"files": ["test/*-lists.mjs"],
			"rules": {"prefer-rest-params": 0}
		}]
	}
}
