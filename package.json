{
	"name": "print",
	"version": "1.1.0",
	"description": "Generate a human-readable representation of a value.",
	"author": "John Gardner <gardnerjohng@gmail.com>",
	"keywords": ["stringify", "trace", "debug", "outline", "format", "string"],
	"repository": "https://github.com/Alhadis/Print",
	"license": "ISC",
	"engines": { "node": ">=6.0.0" },
	"main": "print.js",
	"files": ["print.js"],
	"scripts": {
		"lint": "npx eslint .",
		"test": "mocha"
	},
	"devDependencies": {
		"eslint": "*",
		"mocha": "*",
		"chai":  "*"
	},
	"eslintIgnore": ["test/fixtures/*.js"],
	"eslintConfig": {
		"extends": "eslint:recommended",
		"env": {
			"es6": true,
			"mocha": true,
			"node": true
		},
		"parserOptions": {
			"ecmaVersion": 2017,
			"sourceType": "module"
		},
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"ignoreComments": true,
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"no-console": 0,
			"no-empty": 0,
			"quotes": [
				"error",
				"double",
				{"avoidEscape": true}
			],
			"semi": [
				"error",
				"always"
			],
			"spaced-comment": [
				"error",
				"always"
			]
		}
	}
}
